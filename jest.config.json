{
  "testRegex": "(/tests/.*(test|spec))\\.tsx?$",
  "globals": {
    "ts-jest": {}
  },
  "transformIgnorePatterns": ["/node_modules/"],
  "coverageThreshold": {
    "global": {
      "branches": 10,
      "functions": 10,
      "lines": 10,
      "statements": 10
    }
  },
  "coverageReporters": ["text", "lcov"],
  "coverageDirectory": "./tests/coverage",
  "collectCoverageFrom": [
    "./src/**/*.{js,jsx,ts,tsx}",
    "!**/tests/**"
  ]
}
